FROM debian:10.7-slim
RUN apt update && apt install -y libleveldb-dev=1.20-2.1 && rm -rf /var/lib/apt/lists/*
RUN ln -s /usr/lib/x86_64-linux-gnu/libleveldb.so.1d.20 /usr/lib/x86_64-linux-gnu/libleveldb.so.1
COPY release/bin/tendermint /usr/local/sbin/tendermint
COPY container/docker-entrypoint-tendermint.sh /docker-entrypoint.sh
WORKDIR /
ENTRYPOINT ["/docker-entrypoint.sh"]